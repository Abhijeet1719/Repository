.scroll_wander_box {
    width: 500px;
    height: 294px;
    clear: both;
}
.scroll_wdr_show{
    width: 400px;
    height: 294px;
    float: left;
    position: relative;
    overflow: hidden;
}
.scroll_wdr_show_inner{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}
.scroll_wdr_show_load{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}
.scroll_wdr_show_img {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}
.scroll_wdr_show_img img{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}
.scroll_wdr_show_title{
    position: absolute;
    width: 400px;
    height: 50px;
    word-wrap:break-word;
    word-break:break-all;
    background-color: rgba(0,0,0,0.5);
    color: #ffffff;
    left: 0;
    bottom: 0;
	text-indent:1em; 
	line-height:50px;
}



.scroll_wdr_film{
    width: 100px;
    height: 294px;
    float: left;
}
.scroll_wdr_film_up,.scroll_wdr_film_down{
    width: 34px;
    height: 28px;
    padding: 0 33px;
    background-image: url("../images/tubiao.jpg");
    /*background-size: 33px 28px;*/
    background-repeat: no-repeat;
    background-origin: content;
    -moz-background-origin: content;
    background-clip: content-box;
}
.scroll_wdr_film_up{
    background-position: -55px -332px;
}
.scroll_wdr_film_down{
    background-position: -55px -369px;
}
.scroll_wdr_film_mask {
    width: 100px;
    height: 294px;
    overflow: hidden;
    position: relative;
}

.swiper-wrapper {
    list-style-type: none;
    width:100px;
    height: auto;
 	position: absolute;
    top: 0;
    left: 0;
}
.swiper-wrapper li{
margin-top: -3px;
	}
.swiper-wrapper img{
    width: 96px;
	height: 48px;
	border:1px solid transparent;
   
}
.swiper-wrapper .active-nav  img{
	border-color:#0f0;
}

.wander_bigImg_wrapper{
	width: 100%;
	height: 100%;
	position: absolute;
    top: 0;
	left: 0;
	display: none;
	overflow:hidden;
	background-color:#333;
	text-align:center;
}

.wander_bigImg_wrapper ul{
	overflow: hidden;
}
.wander_bigImg_wrapper li{
	float: left;
    height: 100%;
    position: relative;
    width: 100%;
}

