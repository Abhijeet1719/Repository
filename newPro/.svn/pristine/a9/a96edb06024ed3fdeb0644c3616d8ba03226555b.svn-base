<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--<servlet>-->
    <!--<servlet-name>Onvif4Web</servlet-name>-->
    <!--<servlet-class>hht.mrd.java.util.Onvif4Web</servlet-class>-->
    <!--<load-on-startup>2</load-on-startup>-->
    <!--</servlet>-->

    <context-param>
        <param-name>port</param-name>
        <param-value>8080</param-value>
    </context-param>
    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>com.honghe.recordhibernate.dao.config.DataSourceConfig
            classpath:net/bull/javamelody/monitoring-spring-aspectj.xml<!--和spring集成时添加-->
        </param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.honghe.recordweb.listener.NasAutoDelListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.honghe.recordweb.listener.SipClientListener</listener-class>
    </listener>
    <filter>
        <filter-name>sessionInView</filter-name>
        <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sessionInView</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <!--<servlet>-->
    <!--<servlet-name>InitBuild</servlet-name>-->
    <!--<servlet-class>com.honghe.recordweb.service.frontend.user.InitBuild</servlet-class>-->
    <!--<load-on-startup>1</load-on-startup>-->
    <!--</servlet>-->
    <error-page>
        <error-code>404</error-code>
        <location>/pages/frontend/404.jsp</location>
    </error-page>
</web-app>