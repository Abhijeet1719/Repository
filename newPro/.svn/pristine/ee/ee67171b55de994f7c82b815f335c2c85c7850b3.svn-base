	*{ margin: 0px; padding: 0px; }
body{ background-color: #eee; font-family: "microsoft yahei"; }
.refUpdateDivClass{
				width: 100%;
				height: 100%;
				position: absolute;
				background-color: #fff;
				border-radius: 8px 8px 0px 0px;
				overflow: hidden;
				box-shadow: 0px 5px 10px #aaa;
				transform-origin: 0px 0px;
			}
.refUpdateDivClass .mytitleclass{
				position: absolute;
				width: 100%;
				min-height: 30px;
				padding: 15px 0px;
				text-align: center;
				background-color: #4db812;
				color: #fff;
				font-size: 30px;
				z-index: 2;
			}
.refUpdateDivClass .myimgsclass{
				position: absolute;
				width: 100%;
				height: 100%;
				text-align: center;
				z-index: 1;
				overflow: hidden;
			}
.refUpdateDivClass .myimgsclass .mypicclass{
				width: 100%;
				height: 100%;
			}
.refUpdateDivClass .myimgsclass .mypicclass li{
				float: left;
				width: 100%;
				height: 100%;
				display: inline-block;
				white-space: nowrap;
				background: url("../images/nopic.png") no-repeat center;
			}
.refUpdateDivClass .mytextclass{
				position: absolute;
				bottom: 0px;
				left: 0px;
				height: 120px;
				width: 100%;
			}
.refUpdateDivClass .mytextclass>*{
				color: #fff;
				position: relative;
				z-index: 2;
				font-size: 14px;
				margin-top: 10px;
				display: inline-block;
			}
.refUpdateDivClass .mytextclass>aside{
				width: 60%;
				text-indent: 6px;
				font-size: 16px;
			}
.refUpdateDivClass .mytextclass .right{
				width: 40%;
				text-align: right;
				font-size: 14px;
			}
.refUpdateDivClass .mytextclass .left>div{
				display: inline-block;
				vertical-align: middle;
			}
.refUpdateDivClass .mytextclass .left .avatar{
				width: 60px;
				height: 60px;
				background-size: contain;
				background-position: center;
				border-radius: 100px;
				display: none;
			}
	
.refUpdateDivClass .mytextclass .right span{
				border: 1px solid #ccc;
				background-color: #999;
				border-radius: 3px;
				padding: 1px 5px;
				margin-right: 10px;
			}
.refUpdateDivClass .mytextclass .right span:last-child{
				border:0px;
				background-color: transparent;
			}
.refUpdateDivClass .mytextclass .bg{
				background-color: #333;
				position: absolute;
				left: 0px;
				top: 0px;
				width: 100%;
				height: 100%;
				opacity: 0.5;
				z-index: 1;
				margin-top: 0px;
			}
.refUpdateDivClass .mytextclass .content{
				width: 97%;
				height: 60%;
				margin-left: 10px;
				overflow-x: hidden;
				overflow-y: auto;
				word-break: break-all;
			}