<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="hostgroup" namespace="/hostgroup" extends="frontend-default">
        <action name="Hostgroup_management" class="com.honghe.recordweb.action.frontend.hostgroup.HostgroupAction"
                method="management">
                <result name="hostgroupmanagement" type="redirect">http://${localAddr}:7071/device/device_service.jsp?logOut=${logOutUrl}&amp;userId=${userId}&amp;userName=${userName}&amp;userRealName=${userRealName}</result>
                <!--<result name="hostgroupmanagement">/pages/frontend/device/device_management.jsp</result>   -->

            <!--device_management.jsp 新页面
            <result name="hostgroupmanagement">/pages/frontend/device/device_management_new_beat1.jsp</result>
            --><result name="authorityDeny">/deny.jsp</result>
        </action>
        <action name="Hostgroup_jumpWindow" class="com.honghe.recordweb.action.frontend.hostgroup.HostgroupAction"
                method="jumpWindow">
            <result name="deletewindow">/pages/frontend/device/device_dialog.jsp</result>
            <result name="authorityDeny">/deny.jsp</result>
        </action>
        <action name="Hostgroup_*" class="com.honghe.recordweb.action.frontend.hostgroup.HostgroupAction" method="{1}">
            <result name="authorityDeny">/deny.jsp</result>
        </action>

    </package>
    <package name="host" namespace="/host" extends="frontend-default">
        <action name="Host_assignHost" class="com.honghe.recordweb.action.frontend.hostgroup.HostAction"
                method="assignHost">
            <result name="assignhost">/pages/frontend/device/device_hostlist.jsp</result>
            <result name="authorityDeny">/deny.jsp</result>
        </action>
        <action name="Host_hostManagement" class="com.honghe.recordweb.action.frontend.hostgroup.HostAction"
                method="hostManagement">
            <result name="hostmanagement">/pages/frontend/device/device_hosts.jsp</result>
            <result name="authorityDeny">/deny.jsp</result>
        </action>

        <action name="Host_editHostInfo" class="com.honghe.recordweb.action.frontend.hostgroup.HostAction"
                method="editHostInfo">
            <result name="edithostinfo">/pages/frontend/device/device_editHost.jsp</result>
            <result name="authorityDeny">/deny.jsp</result>
        </action>
        <action name="Host_loadHostByHostgroup" class="com.honghe.recordweb.action.frontend.hostgroup.HostAction"
                method="loadHostByHostgroup">

            <result name="loadhostbyhostgroup">/pages/frontend/device/device_hostInGroup.jsp</result>
            <!--新页面-->
            <!--<result name="loadhostbyhostgroup">/pages/frontend/device/device_hostInGroup_new_beat.jsp</result>-->
            <result name="authorityDeny">/deny.jsp</result>
        </action>
        <action name="Host_hostTree" class="com.honghe.recordweb.action.frontend.hostgroup.HostAction"
                method="hostTree">
            <result name="hosttree">/pages/frontend/device/device_hostTree.jsp</result>
            <result name="authorityDeny">/deny.jsp</result>
        </action>
        <action name="Host_*" class="com.honghe.recordweb.action.frontend.hostgroup.HostAction" method="{1}">
            <result name="authorityDeny">/deny.jsp</result>
            <result name="loadHostAndNasByHostgroup">/pages/frontend/device/device_naslist.jsp</result>
            <result name="loadNasInfo">/pages/frontend/device/device_editNas.jsp</result>
            <result name="devicelist">/pages/frontend/device/device_devicelist.jsp</result>
            <result name="batchSettingInfo">/pages/frontend/device/batchSettingHost.jsp</result>
            <result name="deviceNoRelationList">/pages/frontend/device/device_hostnorelation.jsp</result>
        </action>
    </package>
</struts>