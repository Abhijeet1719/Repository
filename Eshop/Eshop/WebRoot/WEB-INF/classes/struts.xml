<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>



	<!-- 请求参数的编码方式 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.custom.i18n.resources" value="info" />
	<!-- 指定被struts2处理的请求后缀类型。多个用逗号隔开 
	<constant name="struts.action.extension" value="action,do,htm,html"/> -->
	<!-- 当struts.xml改动后，是否重新加载。默认值为false(生产环境下使用),开发阶段最好打开 -->
	<constant name="struts.configuration.xml.reload" value="true" />
	<!-- 是否使用struts的开发模式。开发模式会有更多的调试信息。默认值为false(生产环境下使用),开发阶段最好打开 -->
	<constant name="struts.devMode" value="true" />
	<!-- 设置浏览器是否缓存静态内容。默认值为true(生产环境下使用),开发阶段最好关闭 -->
	<constant name="struts.serve.static.browserCache" value="false" />
	<!-- 默认static目录下的静态资源过不去过滤器，设置为false就可以了 -->
	<constant name="struts.serve.static" value="false" />
	<!-- 指定由spring负责action对象的创建 -->
	<constant name="struts.objectFactory" value="spring" />
	
	
	
	<!-- 前台管理 -->	
	<package name="default" namespace="/" extends="struts-default">
	 	<default-action-ref name="toLoginUserAction"></default-action-ref>
	 	<action name="toLoginUserAction">
	 		<result>/WEB-INF/login.jsp</result>
    	</action>
    	<action name="*UserAction" class="com.shop.action.UserAction" method="{1}">
    		<result name="toLogin">/WEB-INF/login.jsp</result>
    		<result name="toRegister">/WEB-INF/register.jsp</result>
    		<result name="login" type="redirectAction">/admin/getProperties2ProductAction</result>
    		<result name="loginFailure">/WEB-INF/login.jsp</result>
    		<result name="register">/WEB-INF/login.jsp</result>
    	</action>
	 </package>
	 
	 
	 
	<!-- 后台管理 --> 
	<package name="admin" namespace="/admin" extends="struts-default">
	 	<default-action-ref name="toLoginAdminAction"></default-action-ref>
	 	<action name="toLoginAdminAction">
	 		<result>/WEB-INF/admin/admin/login.jsp</result>
	 	</action>
    	<action name="*AdminAction" class="com.shop.action.AdminAction" 
    		method="{1}">
    		<result name="update" type="redirectAction">listAdminAction</result>
    		<result name="list">/WEB-INF/admin/admin/list.jsp</result>
    		<result name="toAdd">/WEB-INF/admin/admin/update.jsp</result>
    		<result name="login">/WEB-INF/admin/main.jsp</result>
    		<result name="loginFailure">/WEB-INF/admin/login.jsp</result>
    	</action>
    	<action name="*AdminMainPageAction" class="com.shop.action.AdminMainPageAction" 
    		method="{1}">
    		<result name="top">/WEB-INF/admin/top.jsp</result>
    		<result name="left">/WEB-INF/admin/left.jsp</result>
    		<result name="right">/WEB-INF/admin/right.jsp</result>
    	</action>
    	<action name="*ProductTypeAction" class="com.shop.action.ProductTypeAction" 
    		method="{1}">
    		<result name="list">/WEB-INF/admin/productType/list.jsp</result>
    		<result name="toAdd">/WEB-INF/admin/productType/update.jsp</result>
    		<result name="toUpdate">/WEB-INF/admin/productType/update.jsp</result>
    		<result name="update" type="redirectAction">listProductTypeAction</result>
    		<result name="del" type="redirectAction">listProductTypeAction</result>
    		<result name="shopType">/WEB-INF/shopType.jsp</result>
    	</action>
    	<action name="*ProductPropertyAction" class="com.shop.action.ProductPropertyAction" 
    		method="{1}">
    		<result name="list">/WEB-INF/admin/productProperty/list.jsp</result>
    		<result name="toAdd">/WEB-INF/admin/productProperty/update.jsp</result>
    		<result name="toUpdate">/WEB-INF/admin/productProperty/update.jsp</result>
    		<result name="update" type="redirectAction">listProductPropertyAction?typeId=${typeId}</result>
    		<result name="del" type="redirectAction">listProductPropertyAction?typeId=${typeId}</result>
   	</action>  
    	<action name="*ProductPropertyOptionAction" class="com.shop.action.ProductPropertyOptionAction" 
    		method="{1}">
    		<result name="list">/WEB-INF/admin/productPropertyOption/list.jsp</result>
    		<result name="toAdd">/WEB-INF/admin/productPropertyOption/update.jsp</result>
    		<result name="toUpdate">/WEB-INF/admin/productPropertyOption/update.jsp</result>
    		<result name="update" type="redirectAction">listProductPropertyOptionAction?propertyId=${propertyId}&amp;typeId=${typeId}</result>
    		<result name="del" type="redirectAction">listProductPropertyOptionAction?propertyId=${propertyId}&amp;typeId=${typeId}</result>
    	</action>
    	<action name="*ProductAction" class="com.shop.action.ProductAction" 
    		method="{1}">
    		<result name="list">/WEB-INF/admin/product/list.jsp</result>
    		<result name="toAdd">/WEB-INF/admin/product/update.jsp</result>
    		<result name="toUpdate">/WEB-INF/admin/product/update.jsp</result>
    		<result name="update" type="redirectAction">listProductAction</result>
    		<result name="del" type="redirectAction">listProductAction</result>
    		<result name="getProperties2">/WEB-INF/main.jsp</result>
    		<result name="chaxun">/WEB-INF/select.jsp</result>
    		<result name="xiangqing">/WEB-INF/chakan.jsp</result>
    	</action>
	 </package>	
	 
	 
	 
	 
