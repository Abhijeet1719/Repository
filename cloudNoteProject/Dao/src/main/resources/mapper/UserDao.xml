<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjy.cloudnote.dao.UserDao">
    <select id="queryUser" resultType="com.zjy.cloudnote.entity.User">
        SELECT userid,username,password
        FROM USER
        ORDER BY userid
        DESC
    </select>
    <select id="queryUserById" resultType="com.zjy.cloudnote.entity.User" >
        SELECT userid,username,password
        FROM USER
        WHERE userid = #{userId}
    </select>
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId" keyColumn="userid"
            parameterType="com.zjy.cloudnote.entity.User">
        INSERT INTO user(username,password)
        VALUES (#{username},#{password})
    </insert>
    <update id="updateUser" parameterType="com.zjy.cloudnote.entity.User">
        UPDATE USER
        <set>
            <if test="username!=null">username=#{username}</if>
            <if test="password!=null">password=#{password}</if>
        </set>
        WHERE userid = #{userId}
    </update>
    <delete id="deleteUser">
      DELETE FROM USER
      WHERE userid = #{userId}
    </delete>
</mapper>