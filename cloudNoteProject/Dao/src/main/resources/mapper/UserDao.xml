<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjy.cloudnote.dao.UserDao">
    <select id="queryUser" resultType="com.zjy.cloudnote.entity.User">
        SELECT user_id,group_id,login_name,password,username,mobile,email,gen_time,last_login_time,count
        FROM cn_user
        ORDER BY user_id
        DESC
    </select>
	<select id="loginCheck" resultType="com.zjy.cloudnote.entity.User" >
		SELECT user_id,group_id,login_name,password,username,mobile,email,gen_time,last_login_time,count
		FROM cn_user
		WHERE login_name = #{loginName} AND password = #{password}
	</select>
    <select id="queryUserById" resultType="com.zjy.cloudnote.entity.User" >
        SELECT user_id,group_id,login_name,password,username,mobile,email,gen_time,last_login_time,count
        FROM cn_user
        WHERE user_id = #{userId}
    </select>
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id"
            parameterType="com.zjy.cloudnote.entity.User">
        INSERT INTO cn_user(group_id,login_name,password,username,mobile,email,gen_time,last_login_time,count)
        VALUES (#{groupId},#{loginName},#{password},#{username},#{mobile},#{email},#{genTime},#{lastLoginTime},#{count})
    </insert>
    <update id="updateUser" parameterType="com.zjy.cloudnote.entity.User">
        UPDATE cn_user
        <set>
            <if test="groupId!=null">group_id=#{groupId},</if>
	        <if test="loginName!=null">login_name=#{loginName},</if>
	        <if test="password!=null">password=#{password},</if>
	        <if test="username!=null">username=#{username},</if>
	        <if test="mobile!=null">mobile=#{mobile},</if>
	        <if test="email!=null">email=#{email},</if>
	        <if test="lastLoginTime!=null">last_login_time=#{lastLoginTime},</if>
	        <if test="count!=null">count=#{count}</if>
        </set>
        WHERE user_id = #{userId}
    </update>
    <delete id="deleteUser">
      DELETE FROM cn_user
      WHERE user_id = #{userId}
    </delete>
</mapper>